# Sage Accounting API Credentials
# Get these from https://developer.sage.com/

# OAuth 2.0 Client Credentials
SAGE_CLIENT_ID=your_client_id_here
SAGE_CLIENT_SECRET=your_client_secret_here

# Access Token (obtained via OAuth flow)
# This is refreshed automatically, but you can set an initial token here
SAGE_ACCESS_TOKEN=

# Refresh Token (for automatic token renewal)
SAGE_REFRESH_TOKEN=

# API Configuration
# Region: uk, us, ca, de, es, fr, ie
SAGE_REGION=uk

# API Version (default: v3.1)
SAGE_API_VERSION=v3.1
